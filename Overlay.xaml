<Window x:Class="ScreenZen.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenZen"
        mc:Ignorable="d"
        Title="Overlay" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="383*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="OverlayMessageBox" Height="50" TextWrapping="Wrap" Text="Overlay Text" Width="173" Cursor="Arrow" FontSize="36" Foreground="#FF34B919" Grid.Column="1" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Grid>
</Window>
