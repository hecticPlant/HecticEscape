<Window x:Class="HecticEscape.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" Height="450" Width="800">
    <Grid Background="Transparent">
        <Border x:Name="OverlayMessageBorder" Background="#99000000" CornerRadius="20" Padding="40" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="False">
            <TextBlock x:Name="OverlayMessageTextBlock"
                       Foreground="White"
                       FontSize="48"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border x:Name="OverlayTimerBorder" Background="#99000000" CornerRadius="10" Padding="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Focusable="False">
            <TextBlock x:Name="OverlayTimerTextBlock"
                       Foreground="White"
                       FontSize="10"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border x:Name="OverlayAppTimerBorder" Background="#99000000" CornerRadius="10" Padding="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,40,0,0" Focusable="False">
            <TextBlock x:Name="OverlayAppTimerTextBlock"
                       Foreground="White"
                       FontSize="10"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
