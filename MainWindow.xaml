<Window x:Class="ScreenZen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenZen" Height="650" Width="850"
        Closing="MainWindow_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Hauptinhalt -->
        <TabControl Grid.Row="0">
            <TabItem Header="Timer">
                <StackPanel Margin="10">
                    <TextBlock Text="Timer-Steuerung" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <ComboBox Name="TimerTypeComboBox" Width="120" Margin="0,0,10,0" SelectionChanged="TimerTypeComboBox_SelectionChanged"/>
                        <TextBox x:Name="TimerDurationTextBox" Width="50" Margin="0,0,10,0" IsReadOnly="True" Focusable="False"/>
                        <Button Content="Zeit Setzen" Name="SetTimerButton" Margin="0,0,10,0" Click="SetTimerButton_Click"/>
                        <TextBox x:Name="TimerCurrentTimeTextBox" Width="60" Margin="0,0,10,0"/>
                        <Button Content="Start Timer" Name="StartTimerButton" Margin="0,0,10,0" Click="StartTimerButton_Click"/>
                        <Button Content="Stop Timer" Name="StopTimerButton" Click="StopTimerButton_Click"/>
                    </WrapPanel>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="WebsitesTab" Header="Websites">
                <StackPanel Margin="10">
                    <TextBlock Text="Webseiten-Verwaltung" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="Blockierte Website anzeigen" Name="ShowBlockedWebsitesButton" Margin="0,0,10,0" Click="ShowBlockedWebsitesButton_Click"/>
                        <Button Content="Website speichern" Name="SaveWebsiteButton" Margin="0,0,10,0" Click="SaveWebsiteButton_Click"/>
                        <TextBox Name="WebsiteInputTextBox" Width="200" Margin="0,0,10,0"/>
                        <Button Content="Lösche Website" Name="DeleteWebsiteButton" Click="DeleteWebsiteButton_Click"/>
                    </WrapPanel>
                    <ListBox Name="WebsiteListBox" Height="200" Margin="0,10,0,0"/>
                    
                </StackPanel>
            </TabItem>
            <TabItem x:Name="ProzesseTab" Header="Prozesse">
                <StackPanel Margin="10">
                    <TextBlock Text="Prozess-Verwaltung" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="Blockierte Apps anzeigen" Name="ShowBlockedAppsButton" Margin="0,0,10,0" Click="ShowBlockedAppsButton_Click"/>
                        <Button Content="Speichere Prozess" Name="SaveProcessButton" Margin="0,0,10,0" Click="SaveProcessButton_Click"/>
                        <Button Content="Laufende Prozesse" Name="ShowRunningProcessesButton" Margin="0,0,10,0" Click="ShowRunningProcessesButton_Click"/>
                        <Button Content="Lösche Prozess" Name="DeleteProcessButton" Click="DeleteProcessButton_Click"/>
                    </WrapPanel>
                    <ListBox Name="ProcessListBox" Height="200" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Gruppen">
                <StackPanel Margin="10">
                    <TextBlock Text="Gruppen-Verwaltung" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <ComboBox Name="GroupSelectionComboBox" Width="200" Margin="0,0,10,0" SelectionChanged="GroupSelectionComboBox_SelectionChanged"/>
                        <Button Content="Neue Gruppe Erstellen" Name="CreateGroupButton" Margin="0,0,10,0" Click="CreateGroupButton_Click"/>
                        <Button Content="Gruppe Löschen" Name="DeleteGroupButton" Margin="0,0,10,0" Click="DeleteGroupButton_Click"/>
                        <Button Content="Aktiviere Gruppe" Name="ActivateGroupButton" Margin="0,0,10,0" Click="ActivateGroupButton_Click"/>
                        <Button Content="Deaktiviere Gruppe" Name="DeactivateGroupButton" Click="DeactivateGroupButton_Click"/>
                    </WrapPanel>
                    <TextBox Name="GroupActivityTextBox" Width="200" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Steuerung">
                <StackPanel Margin="10" VerticalAlignment="Top">
                    <TextBlock Text="Allgemein" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="Start" x:Name="StartBlockingButton" Margin="0,0,10,0" Click="StartBlockingButton_Click"/>
                        <Button Content="Toggle Debug Mode" Name="DebugButton" Margin="0,0,10,0" Click="DebugButton_Click"/>
                        <Button Content="Toggle Overlay" Name="ToggleOverlayButton" Click="ToggleOverlayButton_Click"/>
                    </WrapPanel>

                    <TextBlock Text="Timer" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="Stop All Timers" Name="StopAllTimersButton" Margin="0,0,10,0" Click="StopAllTimersButton_Click"/>
                        <Button Content="Force Break" Name="ForceBreakButton" Margin="0,0,10,0" Click="ForceBreakButton_Click"/>
                        <Button Content="End Break" Name="EndBreakButton" Margin="0,0,10,0" Click="EndBreakButton_Click"/>
                    </WrapPanel>

                    <TextBlock Text="Prozesse" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <CheckBox x:Name="AppBlockingCheckBox" Content="App-Blocking aktiv" Margin="0,0,0,10" Checked="AppBlockingCheckBox_Checked" Unchecked="AppBlockingCheckBox_Unchecked"/>

                    <TextBlock Text="Web" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="Start Proxy" Name="StartProxyButton" Margin="0,0,10,0" Click="StartProxyButton_Click"/>
                        <Button Content="Stop Proxy" Name="StopProxyButton" Margin="0,0,10,0" Click="StopProxyButton_Click"/>
                    </WrapPanel>
                    <CheckBox x:Name="WebsiteBlockingCheckBox" Content="Website-Blocking aktiv" Margin="0,0,0,0" Checked="WebsiteBlockingCheckBox_Checked" Unchecked="WebsiteBlockingCheckBox_Unchecked"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Statusleiste -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Name="ProxyStatusTextBlock" Text="Proxy inaktiv" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="PauseStatusTextBlock" Text="Momentan keine Pause" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="FreeTimerStatusTextBlock" Text="Free-Timer: inaktiv" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="BreakTimerStatusTextBlock" Text=" Break-Timer: inaktiv" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="CheckTimerStatusTextBlock" Text="Check-Timer: inaktiv" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="DebugStatusTextBlock" Text="Debug aus"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="TimerStatusTextBlock" Text="Timer: --:--" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
